            position: sticky;
            background-color: #fff;
        }
        .header_content{
            width: 100%;
            height: 60px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-bottom: 1px solid #E5E5E5;
            position: sticky;
        }
        .header_logo{
            display: flex;
            padding-left: 40px;
            justify-items: center;

        }
        .header_text{
            font-family: 'Inter', sans-serif;
            color: #F55F0A;
            font-family: Inter;
            font-size: 32px;
            font-style: normal;
            font-weight: 700;
            line-height: normal;
        }


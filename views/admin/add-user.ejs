							<div class="card comman-shadow">
								<div class="card-body">
									<form action="/add-user" method="post">
										<div class="row">
											<div class="col-12">
												<h5 class="form-title student-info">User Information <span><a href="javascript:;"><i class="feather-more-vertical"></i></a></span></h5>
											</div>
											<div class="col-12 col-sm-4">  
												<div class="form-group local-forms">
													<label >Name <span class="login-danger">*</span></label>
													<input class="form-control" type="text" placeholder="Enter Name" id="username"  name="username" required>
												</div>
											</div>
											<div class="col-12 col-sm-4">
												<div class="form-group local-forms">
													<label>Email</label>
													<input class="form-control" type="text" placeholder="Enter Email" id="email" name="email" required>
												</div>
											</div>
											<div class="col-12 col-sm-4">
												<div class="form-group local-forms">
													<label >Phone number<span class="login-danger">*</span></label>
													<input class="form-control" type="text" placeholder="Enter Phone number" id="password" name="number" required>
												</div>
											</div>
											<div class="col-12 col-sm-4">
												<div class="form-group local-forms">
													<label >Subscription Plan<span class="login-danger">*</span></label>
													<select class="form-control select" name="subscriptionPlan">
														<option>Select Plan</option>
														<% subscriptionPlans.forEach(plan => { %>
															<option value="<%= plan._id %>"><%= plan.name %></option>
														<% }); %>
													</select>
												</div>
											</div>
											
											 <div class="col-12 col-sm-4">
												<div class="form-group local-forms">
													<label >Purpose </label>
													<input class="form-control" type="text" placeholder="Enter Purpose" name="occassion" >
												</div>
											</div> 
											<div class="col-12 col-sm-4">
												<div class="form-group local-forms">
													<label >Card Type<span class="login-danger">*</span></label>
													<select class="form-control select" name="cardType">
														<option>Select card</option>
														<% cardTypes.forEach(cardType => { %>
															<option value="<%= cardType._id %>"><%= cardType.name %></option>
														<% }); %>
													</select>
												</div>
											</div>
											<div class="col-12 col-sm-4">
												<div class="form-group local-forms">
													<label >Template<span class="login-danger">*</span></label>
													<select class="form-control select" name="template">
														<option>Select Template</option>
														<% templates.forEach(template => { %>
															<option value="<%= template._id %>"><%= template.name %></option>
														<% }); %>
													</select>
												</div>
											</div>

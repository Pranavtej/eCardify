<body>

	<!-- Main Wrapper -->
	<div class="main-wrapper">

		<!-- Header -->
		<div class="header">

			<!-- Logo -->
			<div class="header-left">
				<a href="index.ejs" class="logo">
					<img src="/public/assets/admin/img/logo.png" alt="Logo">

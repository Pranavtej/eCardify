      rel="stylesheet"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="/public/assets/admin/plugins/bootstrap/css/bootstrap.min.css"
    />

    <!-- Feathericon CSS -->
    <link
      rel="stylesheet"
      href="/public/assets/admin/plugins/feather/feather.css"

      rel="stylesheet"
      href="/public/assets/admin/plugins/fontawesome/css/all.min.css"
    />

    <!-- Main CSS -->
    <link rel="stylesheet" href="/public/assets/admin/css/style.css" />
  </head>
  <body>
    <!-- Main Wrapper -->
    <div class="main-wrapper">
      <!-- Header -->
      <%- include('header.ejs'); %>
      <!-- /Header -->

      <!-- Sidebar -->
      <%- include('sidebar.ejs'); %>
      <!-- /Sidebar -->

      <!-- Page Wrapper -->
      <div class="page-wrapper">
        <div class="content container-fluid">
          <!-- Page Header -->
          <div class="page-header">
            <div class="row align-items-center">
              <div class="col">
                <h3 class="page-title">subscription plan</h3>
                <ul class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="index.ejs">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active">subscription plan</li>
                </ul>
              </div>
            </div>
          </div>
          <!-- /Page Header -->

          <div class="student-group-form">
            <!-- <div class="row">
              <div class="col-lg-3 col-md-6">
                <div class="form-group">
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Search by ID or NAME"
                  />
                </div>
              </div>
              <div class="col-lg-3 col-md-6">  
								<div class="form-group">
									<input type="text" class="form-control" placeholder="Search by Name ...">
								</div>
							</div>
							<div class="col-lg-4 col-md-6">  
								<div class="form-group">
									<input type="text" class="form-control" placeholder="Search by Phone ...">
								</div>
							</div>-->
              <!-- <div class="col-lg-2">
                <div class="search-student-btn">
                  <button type="btn" class="btn btn-primary">Search</button>
                </div>
              </div> -->
            </div> 
          </div>

          <div class="row">
            <div class="col-sm-12">
              <div class="card card-table">
                <div class="card-body">
                  <!-- Page Header -->
                  <div class="page-header">
                    <div class="row align-items-center">
                      <div class="col">
                        <h3 class="page-title">subscription plan</h3>
                      </div>
                      <div
                        class="col-auto text-end float-end ms-auto download-grp"
                      >
                        <a
                          href="/teachers"
                          class="btn btn-outline-gray me-2 active"
                          ><i class="feather-list"></i
                        ></a>
                        <a
                          href="teachers-grid.ejs"
                          class="btn btn-outline-gray me-2"
                          ><i class="feather-grid"></i
                        ></a>
                        <!--<a href="#" class="btn btn-outline-primary me-2"><i class="fas fa-download"></i> Download</a>-->
                        <a href="/add-subscription" class="btn btn-primary"
                          ><i class="fas fa-plus"></i
                        ></a>
                      </div>
                    </div>
                  </div>
                  <!-- /Page Header -->

                  <div class="table-responsive">
                    <table
                      class="table border-0 star-student table-hover table-center mb-0 datatable table-striped"
                    >
                      <thead class="student-thread">
                        <tr>
                          <!-- <th>
														<div class="form-check check-tables">
															<input class="form-check-input" type="number"  value="">
														</div>
													</th> -->
                          <th>S.No</th>
                          <th>Plan Name</th>
                          <th>Features</th>
                          <th>Price</th>

                          <th class="text-end">Delete/Edit</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% subscriptionPlans.forEach((plan, index) => { %>
                          <tr>
                            <td><%= index + 1 %></td>
                            <td><%= plan.name %></td>
                            <td>
                              <ul>
                                <% if (plan.features && Array.isArray(plan.features)) { %>
                                  <% plan.features.forEach(feature => { %>
                                    <li><%= feature %></li>
                                  <% }); %>
                                <% } else { %>
                                  <li>No features available</li>
                                <% } %>
                              </ul>
                            </td>
                            <td>$<%= plan.price.toFixed(2) %></td>
                            <td class="text-end">
                              <div class="actions">
                                <a href="/delete/<%= plan._id %>" class="btn btn-sm bg-danger-light me-2">
                                  <i class="feather-trash-2"></i> 
                                </a>
                                <a href="/edit-subscription/<%= plan._id %>" class="btn btn-sm bg-danger-light">
                                  <i class="feather-edit"></i>
                                </a>
                              </div>
                            </td>
                          </tr>
                        <% }); %>

                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer -->
        <!--<footer>
